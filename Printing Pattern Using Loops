#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>
#define min(a,b) ((a)<(b)?(a):(b))
int main() 
{

    int n;
    scanf("%d", &n);
  	for(int i=1;i<=2*n-1;i++){
        for(int j=1;j<=2*n-1;j++){
            int t =(n+1) - min(min(i,j),min(2*n-i,2*n-j));
            printf("%d ",t);
}
        printf("\n");
}
    return 0;
}
